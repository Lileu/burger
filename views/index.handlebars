<div class="container">

    <div class="jumbotron">
        <h1 class="header">Eat-Da-Burger!</h1>
        <h2>add > eat > purge</h2>
        <br>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <input type="text" class="input" id="newburger" name="burger" placeholder="Enter a burger name"> 
                    <button type="submit" class="btn btn-primary submit" id="addburger">Add</button>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftpanel"><h3>Burgers on your plate</h3>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span> {{this.id}} - {{this.burger_name}}</span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Eat</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightpanel"><h3>Burgers devoured</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span> {{this.id}} - {{this.burger_name}}</span>
                        <button type="button" class="remove-burger btn btn-danger" id="removebutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Purge</button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
</div>
<!--endcontainer -->  